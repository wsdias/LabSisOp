#!/bin/sh
#
# Configuring host communication.
#

case "$1" in
	start)
	printf "Starting Python Web Server"
	#/usr/bin/python /root/simple_http_server.py

	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
	stop)
	printf "Shutdowning Python Web Server"

	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
	restart|reload)
	"$0" stop
	"$0" start
	;;
	*)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
	esac

	exit $?
