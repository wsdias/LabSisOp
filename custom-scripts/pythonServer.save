#!/bin/sh
#
# Configuring host communication.
#

case "$1" in
start)
printf "Configuring host communication."

;
stop)
printf "Shutdown host communication. "
/sbin/route del default
/sbin/ifdown -a
[ $? = 0 ] && echo "OK" || echo "FAIL"
;;
restart|reload)
"$0" stop
"$0" start
;;
*)
echo "Usage: $0 {start|stop|restart}"
exit 1
esac

exit $?
